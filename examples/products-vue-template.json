{
  "model": "products_vue_template",
  "title": "Product Management (Vue Component Template)",
  "singular_title": "Product",
  "description": "Manage your product catalog using Vue component templates",
  "table": "products",
  "permissions": {
    "read": "view_products",
    "create": "create_product",
    "update": "edit_product",
    "delete": "delete_product"
  },
  "default_sort": {
    "name": "asc"
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "readonly": true,
      "sortable": true,
      "searchable": false,
      "listable": true
    },
    "name": {
      "type": "string",
      "label": "Product Name",
      "required": true,
      "sortable": true,
      "searchable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 2,
          "max": 255
        }
      }
    },
    "sku": {
      "type": "string",
      "label": "SKU",
      "required": true,
      "sortable": true,
      "searchable": true,
      "listable": false,
      "filter_type": "starts_with",
      "validation": {
        "required": true,
        "unique": true
      }
    },
    "price": {
      "type": "decimal",
      "label": "Price",
      "required": true,
      "sortable": true,
      "searchable": false,
      "listable": true,
      "filter_type": "between",
      "validation": {
        "required": true,
        "numeric": true,
        "min": 0
      }
    },
    "description": {
      "type": "text",
      "label": "Description",
      "required": false,
      "sortable": false,
      "searchable": true,
      "listable": true,
      "field_template": "ProductCard.vue"
    },
    "category_id": {
      "type": "integer",
      "label": "Category",
      "required": true,
      "sortable": true,
      "searchable": false,
      "listable": true,
      "filter_type": "equals"
    },
    "is_active": {
      "type": "boolean",
      "label": "Active",
      "default": true,
      "sortable": true,
      "searchable": false,
      "listable": false
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "readonly": true,
      "sortable": true,
      "searchable": false,
      "listable": true,
      "date_format": "Y-m-d H:i:s"
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "readonly": true,
      "sortable": true,
      "searchable": false,
      "listable": false,
      "date_format": "Y-m-d H:i:s"
    }
  }
}
