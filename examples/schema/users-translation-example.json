{
    "model": "users",
    "title": "User Management",
    "singular_title": "User",
    "description": "Manage system users",
    "table": "users",
    "primary_key": "id",
    "title_field": "user_name",
    "actions": [
        {
            "key": "disable_user",
            "label": "EXAMPLE.USER.DISABLE",
            "icon": "user-slash",
            "type": "field_update",
            "field": "flag_enabled",
            "value": false,
            "style": "danger",
            "confirm": "EXAMPLE.USER.DISABLE_CONFIRM",
            "visible_when": {
                "flag_enabled": true
            },
            "modal_config": {
                "type": "confirm"
            },
            "comment": "Default warning 'ACTION.CANNOT_UNDO' is automatically shown for confirm-type modals"
        },
        {
            "key": "enable_user",
            "label": "EXAMPLE.USER.ENABLE",
            "icon": "user-check",
            "type": "field_update",
            "field": "flag_enabled",
            "value": true,
            "style": "primary",
            "confirm": "EXAMPLE.USER.ENABLE_CONFIRM",
            "visible_when": {
                "flag_enabled": false
            },
            "modal_config": {
                "type": "confirm",
                "warning": ""
            },
            "comment": "No warning message (empty string disables default warning)"
        },
        {
            "key": "password_change",
            "label": "EXAMPLE.USER.CHANGE_PASSWORD",
            "icon": "key",
            "type": "field_update",
            "field": "password",
            "style": "warning",
            "confirm": "EXAMPLE.USER.PASSWORD_CHANGE_CONFIRM",
            "modal_config": {
                "type": "input",
                "fields": ["password"]
            },
            "comment": "Input modal with password field - no warning shown by default for input type"
        },
        {
            "key": "password_reset",
            "label": "EXAMPLE.USER.RESET_PASSWORD",
            "icon": "envelope",
            "type": "api_call",
            "method": "POST",
            "endpoint": "/api/users/{{id}}/password/reset",
            "style": "secondary",
            "confirm": "EXAMPLE.USER.PASSWORD_RESET_CONFIRM",
            "modal_config": {
                "type": "confirm",
                "warning": "EXAMPLE.USER.PASSWORD_RESET_WARNING"
            },
            "comment": "Custom warning message using modal_config.warning"
        },
        {
            "key": "delete_permanent",
            "label": "EXAMPLE.USER.DELETE_PERMANENT",
            "icon": "trash",
            "type": "delete",
            "style": "danger",
            "confirm": "EXAMPLE.USER.DELETE_PERMANENT_CONFIRM",
            "modal_config": {
                "type": "confirm",
                "warning": "EXAMPLE.USER.DELETE_PERMANENT_WARNING"
            },
            "comment": "Permanent delete with custom warning"
        }
    ],
    "fields": {
        "id": {
            "type": "integer",
            "label": "EXAMPLE.USER.ID",
            "readonly": true,
            "show_in": ["detail"]
        },
        "user_name": {
            "type": "string",
            "label": "EXAMPLE.USER.USERNAME",
            "required": true,
            "show_in": ["list", "form", "detail"]
        },
        "first_name": {
            "type": "string",
            "label": "EXAMPLE.USER.FIRST_NAME",
            "required": true,
            "show_in": ["list", "form", "detail"]
        },
        "last_name": {
            "type": "string",
            "label": "EXAMPLE.USER.LAST_NAME",
            "required": true,
            "show_in": ["list", "form", "detail"]
        },
        "email": {
            "type": "email",
            "label": "EXAMPLE.USER.EMAIL",
            "required": true,
            "show_in": ["list", "form", "detail"]
        },
        "password": {
            "type": "password",
            "label": "EXAMPLE.USER.PASSWORD",
            "required": false,
            "show_in": ["create"],
            "validation": {
                "length": {
                    "min": 8
                },
                "match": true
            }
        },
        "flag_enabled": {
            "type": "boolean",
            "label": "EXAMPLE.USER.ENABLED",
            "default": true,
            "show_in": ["detail"]
        }
    }
}
