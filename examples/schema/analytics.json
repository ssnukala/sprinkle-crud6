{
  "model": "analytics",
  "title": "Analytics Data",
  "singular_title": "Analytics Entry",
  "description": "Analytics data from secondary database",
  "table": "page_views",
  "connection": "mysql_analytics",
  "permissions": {
    "read": "view_analytics",
    "create": "create_analytics",
    "update": "edit_analytics",
    "delete": "delete_analytics"
  },
  "default_sort": {
    "viewed_at": "desc"
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "editable": false,
      "sortable": true,
      "filterable": false,
      "listable": true
    },
    "page_url": {
      "type": "string",
      "label": "Page URL",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "max": 500
        }
      }
    },
    "user_id": {
      "type": "integer",
      "label": "User ID",
      "required": false,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "filter_type": "equals"
    },
    "ip_address": {
      "type": "string",
      "label": "IP Address",
      "required": false,
      "sortable": false,
      "filterable": true,
      "listable": true,
      "filter_type": "equals"
    },
    "user_agent": {
      "type": "text",
      "label": "User Agent",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false
    },
    "viewed_at": {
      "type": "datetime",
      "label": "Viewed At",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "filter_type": "between",
      "date_format": "Y-m-d H:i:s"
    },
    "session_data": {
      "type": "json",
      "label": "Session Data",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "editable": false,
      "sortable": true,
      "filterable": false,
      "listable": true,
      "date_format": "Y-m-d H:i:s"
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "editable": false,
      "sortable": true,
      "filterable": false,
      "listable": false,
      "date_format": "Y-m-d H:i:s"
    }
  }
}
