{
  "model": "product",
  "title": "Product Management",
  "description": "Manage products",
  "table": "pr_product",
  "primary_key": "id",
  "timestamps": true,
  "soft_delete": true,
  "permissions": {
    "read": "uri_products",
    "create": "create_product",
    "update": "update_product",
    "delete": "delete_product"
  },
  "default_sort": {
    "id": "desc"
  },
  "detail_editable": {
    "model": "product_catalog",
    "foreign_key": "product_id",
    "fields": ["catalog_id", "name", "description", "unit_price", "tax", "active_date", "status"],
    "title": "Catalog Assignments",
    "allow_add": true,
    "allow_edit": true,
    "allow_delete": true
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "category_id": {
      "type": "integer",
      "label": "Category ID",
      "required": false,
      "sortable": true,
      "filterable": true,
      "searchable": false
    },
    "name": {
      "type": "string",
      "label": "Product Name",
      "required": false,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "length": {
          "max": 100
        }
      }
    },
    "description": {
      "type": "text",
      "label": "Description",
      "sortable": false,
      "filterable": true,
      "searchable": true
    },
    "slug": {
      "type": "string",
      "label": "Slug",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "length": {
          "max": 100
        }
      }
    },
    "photo": {
      "type": "string",
      "label": "Photo",
      "sortable": false,
      "filterable": false,
      "searchable": false,
      "validation": {
        "length": {
          "max": 500
        }
      }
    },
    "type": {
      "type": "string",
      "label": "Type",
      "sortable": true,
      "filterable": true,
      "searchable": false,
      "validation": {
        "length": {
          "max": 2
        }
      }
    },
    "active_date": {
      "type": "datetime",
      "label": "Active Date",
      "sortable": true,
      "filterable": true,
      "searchable": false
    },
    "unit_price": {
      "type": "decimal",
      "label": "Unit Price",
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "tax": {
      "type": "decimal",
      "label": "Tax",
      "sortable": false,
      "filterable": false,
      "searchable": false
    },
    "notes": {
      "type": "string",
      "label": "Notes",
      "sortable": false,
      "filterable": true,
      "searchable": true,
      "validation": {
        "length": {
          "max": 500
        }
      }
    },
    "meta": {
      "type": "json",
      "label": "Metadata",
      "sortable": false,
      "filterable": false,
      "searchable": false
    },
    "status": {
      "type": "string",
      "label": "Status",
      "sortable": true,
      "filterable": true,
      "searchable": false,
      "validation": {
        "length": {
          "max": 1
        }
      }
    },
    "created_by": {
      "type": "string",
      "label": "Created By",
      "readonly": true,
      "sortable": false,
      "filterable": false,
      "searchable": false,
      "validation": {
        "length": {
          "max": 20
        }
      }
    },
    "updated_by": {
      "type": "string",
      "label": "Updated By",
      "readonly": true,
      "sortable": false,
      "filterable": false,
      "searchable": false,
      "validation": {
        "length": {
          "max": 20
        }
      }
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "deleted_at": {
      "type": "datetime",
      "label": "Deleted At",
      "readonly": true,
      "sortable": false,
      "filterable": false,
      "searchable": false
    }
  }
}
