{
  "model": "users_context_demo",
  "title": "User Management (Context-Specific Visibility)",
  "singular_title": "User",
  "description": "Demonstrates context-specific field visibility (create vs edit vs view)",
  "table": "users",
  "primary_key": "id",
  "timestamps": true,
  "permissions": {
    "read": "uri_users",
    "create": "create_user",
    "update": "update_user_field",
    "delete": "delete_user"
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "autoIncrement": true,
      "show_in": ["detail"]
    },
    "user_name": {
      "type": "string",
      "label": "Username",
      "nullable": false,
      "length": 50,
      "show_in": ["list", "create", "edit", "detail"],
      "validation": {
        "required": true,
        "unique": true
      }
    },
    "email": {
      "type": "string",
      "label": "Email",
      "nullable": false,
      "show_in": ["list", "create", "edit", "detail"],
      "validation": {
        "required": true,
        "email": true,
        "unique": true
      }
    },
    "password": {
      "type": "password",
      "label": "Password",
      "show_in": ["create", "edit"],
      "description": "Password fields are never shown in list or detail views for security",
      "validation": {
        "length": {
          "min": 8,
          "max": 255
        },
        "match": true
      }
    },
    "password_confirmation": {
      "type": "password",
      "label": "Confirm Password",
      "show_in": ["create", "edit"],
      "description": "Confirmation field only needed in forms"
    },
    "first_name": {
      "type": "string",
      "label": "First Name",
      "nullable": false,
      "show_in": ["create", "edit", "detail"]
    },
    "last_name": {
      "type": "string",
      "label": "Last Name",
      "nullable": false,
      "show_in": ["create", "edit", "detail"]
    },
    "api_token": {
      "type": "string",
      "label": "API Token",
      "show_in": ["create"],
      "description": "API token is generated on creation, cannot be edited later",
      "readonly": true
    },
    "email_verified_at": {
      "type": "datetime",
      "label": "Email Verified",
      "show_in": ["list", "detail"],
      "description": "Verification timestamp - view only, not editable"
    },
    "is_active": {
      "type": "boolean",
      "ui": "toggle",
      "label": "Active",
      "default": true,
      "show_in": ["list", "edit", "detail"],
      "description": "Active status - not shown in create form (uses default)"
    },
    "last_login_at": {
      "type": "datetime",
      "label": "Last Login",
      "show_in": ["detail"],
      "description": "System-managed field - detail view only"
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "show_in": ["detail"]
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "show_in": ["detail"]
    }
  }
}
