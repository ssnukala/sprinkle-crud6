{
    "model": "permissions",
    "title": "CRUD6.PERMISSION.PAGE",
    "singular_title": "CRUD6.PERMISSION.1",
    "title_field": "name",
    "description": "CRUD6.PERMISSION.PAGE_DESCRIPTION",
    "table": "permissions",
    "primary_key": "id",
    "permissions": {
        "read": "uri_crud6",
        "create": "create_permission",
        "update": "update_permission",
        "delete": "delete_permission",
        "custom_action": "update_permission"
    },
    "default_sort": {
        "slug": "asc"
    },
    "relationships": [
        {
            "name": "roles",
            "type": "many_to_many",
            "pivot_table": "permission_roles",
            "foreign_key": "permission_id",
            "related_key": "role_id",
            "title": "ROLE.2",
            "actions": {
                "on_update": {
                    "sync": "role_ids",
                    "description": "Sync permission roles from form input"
                },
                "on_delete": {
                    "detach": "all",
                    "description": "Remove all role associations when permission is deleted"
                }
            }
        },
        {
            "name": "users",
            "type": "belongs_to_many_through",
            "through": "roles",
            "first_pivot_table": "permission_roles",
            "first_foreign_key": "permission_id",
            "first_related_key": "role_id",
            "second_pivot_table": "role_users",
            "second_foreign_key": "role_id",
            "second_related_key": "user_id",
            "title": "CRUD6.PERMISSION.USERS"
        }
    ],
    "details": [
        {
            "model": "users",
            "list_fields": [
                "user_name",
                "first_name",
                "last_name",
                "email"
            ],
            "title": "CRUD6.PERMISSION.USERS"
        },
        {
            "model": "roles",
            "list_fields": [
                "name",
                "slug",
                "description"
            ],
            "title": "ROLE.2"
        }
    ],
    "fields": {
        "id": {
            "type": "integer",
            "label": "CRUD6.PERMISSION.ID",
            "auto_increment": true,
            "readonly": true,
            "show_in": [
                "detail"
            ]
        },
        "slug": {
            "type": "string",
            "label": "CRUD6.PERMISSION.SLUG",
            "required": true,
            "sortable": true,
            "filterable": true,
            "show_in": [
                "list",
                "form",
                "detail"
            ],
            "validation": {
                "required": true,
                "unique": true,
                "length": {
                    "max": 255
                },
                "no_whitespace": true
            }
        },
        "name": {
            "type": "string",
            "label": "CRUD6.PERMISSION.NAME",
            "required": true,
            "sortable": true,
            "filterable": true,
            "show_in": [
                "list",
                "form",
                "detail"
            ],
            "validation": {
                "required": true,
                "length": {
                    "min": 1,
                    "max": 255
                },
                "no_leading_whitespace": true,
                "no_trailing_whitespace": true
            }
        },
        "conditions": {
            "type": "text",
            "label": "CRUD6.PERMISSION.CONDITIONS",
            "required": false,
            "default": "",
            "show_in": [
                "form",
                "detail"
            ]
        },
        "description": {
            "type": "text",
            "label": "CRUD6.PERMISSION.DESCRIPTION",
            "required": false,
            "sortable": false,
            "filterable": false,
            "show_in": [
                "list",
                "form",
                "detail"
            ]
        },
        "role_ids": {
            "type": "multiselect",
            "label": "CRUD6.PERMISSION.ROLES",
            "description": "Permission roles (used for sync on update)",
            "computed": true,
            "lookup": {
                "model": "roles",
                "id": "id",
                "desc": "name"
            },
            "required": false,
            "show_in": [
                "form"
            ]
        },
        "created_at": {
            "type": "datetime",
            "label": "CRUD6.PERMISSION.CREATED_AT",
            "readonly": true,
            "show_in": [
                "detail"
            ],
            "date_format": "Y-m-d H:i:s"
        },
        "updated_at": {
            "type": "datetime",
            "label": "CRUD6.PERMISSION.UPDATED_AT",
            "readonly": true,
            "show_in": [
                "detail"
            ],
            "date_format": "Y-m-d H:i:s"
        }
    }
}