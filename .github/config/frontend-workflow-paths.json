{
  "description": "Frontend paths and API payload configurations for comprehensive user workflow testing",
  "version": "1.0",
  "models": {
    "users": {
      "frontend_paths": [
        "/users",
        "/users/u/{id}"
      ],
      "workflows": {
        "create": {
          "description": "Create new user from frontend",
          "steps": [
            {
              "action": "navigate",
              "path": "/users",
              "method": "GET",
              "api_endpoint": "/api/crud6/users"
            },
            {
              "action": "open_create_modal",
              "method": "GET",
              "api_endpoint": "/api/crud6/users/schema"
            },
            {
              "action": "submit_form",
              "method": "POST",
              "api_endpoint": "/api/crud6/users",
              "payload": {
                "user_name": "newuser",
                "first_name": "New",
                "last_name": "User",
                "email": "newuser@example.com",
                "password": "SecurePassword123",
                "flag_enabled": true,
                "flag_verified": false
              }
            }
          ]
        },
        "edit": {
          "description": "Edit existing user",
          "steps": [
            {
              "action": "navigate_to_detail",
              "path": "/users/u/{id}",
              "method": "GET",
              "api_endpoint": "/api/crud6/users/{id}"
            },
            {
              "action": "open_edit_modal",
              "method": "GET",
              "api_endpoint": "/api/crud6/users/schema"
            },
            {
              "action": "submit_changes",
              "method": "PUT",
              "api_endpoint": "/api/crud6/users/{id}",
              "payload": {
                "first_name": "Updated",
                "last_name": "Name",
                "email": "updated@example.com"
              }
            }
          ]
        },
        "toggle_enabled": {
          "description": "Toggle user enabled flag",
          "steps": [
            {
              "action": "click_toggle",
              "method": "PUT",
              "api_endpoint": "/api/crud6/users/{id}/flag_enabled",
              "payload": {
                "flag_enabled": false
              }
            }
          ]
        },
        "toggle_verified": {
          "description": "Toggle user verified flag",
          "steps": [
            {
              "action": "click_toggle",
              "method": "PUT",
              "api_endpoint": "/api/crud6/users/{id}/flag_verified",
              "payload": {
                "flag_verified": true
              }
            }
          ]
        },
        "assign_roles": {
          "description": "Assign roles to user",
          "steps": [
            {
              "action": "open_manage_roles_modal",
              "method": "GET",
              "api_endpoint": "/api/crud6/users/{id}/roles"
            },
            {
              "action": "load_available_roles",
              "method": "GET",
              "api_endpoint": "/api/crud6/roles"
            },
            {
              "action": "submit_role_selection",
              "method": "POST",
              "api_endpoint": "/api/crud6/users/{id}/roles",
              "payload": {
                "related_ids": [1, 2, 3]
              }
            }
          ]
        },
        "remove_roles": {
          "description": "Remove roles from user",
          "steps": [
            {
              "action": "submit_role_removal",
              "method": "DELETE",
              "api_endpoint": "/api/crud6/users/{id}/roles",
              "payload": {
                "related_ids": [1]
              }
            }
          ]
        },
        "delete": {
          "description": "Delete user",
          "steps": [
            {
              "action": "click_delete_confirm",
              "method": "DELETE",
              "api_endpoint": "/api/crud6/users/{id}"
            }
          ]
        },
        "search": {
          "description": "Search users",
          "steps": [
            {
              "action": "type_search_query",
              "method": "GET",
              "api_endpoint": "/api/crud6/users?search={query}"
            }
          ]
        },
        "filter": {
          "description": "Filter users",
          "steps": [
            {
              "action": "apply_filter",
              "method": "GET",
              "api_endpoint": "/api/crud6/users?filters[user_name]={value}"
            }
          ]
        },
        "sort": {
          "description": "Sort users",
          "steps": [
            {
              "action": "click_column_header",
              "method": "GET",
              "api_endpoint": "/api/crud6/users?sorts[user_name]=asc"
            }
          ]
        },
        "paginate": {
          "description": "Navigate pages",
          "steps": [
            {
              "action": "click_next_page",
              "method": "GET",
              "api_endpoint": "/api/crud6/users?size=10&page=1"
            }
          ]
        }
      }
    },
    "roles": {
      "frontend_paths": [
