{
  "model": "users",
  "title": "User Management",
  "singular_title": "User",
  "description": "Manage system users",
  "table": "users",
  "title_field": "user_name",
  "primary_key": "id",
  "permissions": {
    "read": "view_users",
    "create": "create_user",
    "update": "edit_user",
    "delete": "delete_user"
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "editable": false,
      "viewable": true,
      "listable": true
    },
    "user_name": {
      "type": "string",
      "label": "Username",
      "required": true,
      "editable": true,
      "viewable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 3,
          "max": 50
        }
      }
    },
    "first_name": {
      "type": "string",
      "label": "First Name",
      "required": true,
      "editable": true,
      "viewable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 1,
          "max": 50
        }
      }
    },
    "last_name": {
      "type": "string",
      "label": "Last Name",
      "required": true,
      "editable": true,
      "viewable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 1,
          "max": 50
        }
      }
    },
    "email": {
      "type": "email",
      "label": "Email",
      "required": true,
      "editable": true,
      "viewable": true,
      "listable": true,
      "validation": {
        "required": true,
        "email": true
      }
    },
    "active": {
      "type": "boolean",
      "label": "Active",
      "editable": true,
      "viewable": true,
      "listable": true,
      "default": true
    }
  }
}
