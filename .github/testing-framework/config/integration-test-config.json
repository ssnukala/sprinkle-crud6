{
  "sprinkle": {
    "name": "YOUR_SPRINKLE_NAME",
    "composer_package": "yourvendor/your-sprinkle",
    "npm_package": "@yourvendor/your-sprinkle",
    "namespace": "YourVendor\\Sprinkle\\YourSprinkle"
  },
  "schemas": {
    "path": "app/schema/crud6",
    "comment": "Leave empty to use default app/schema/crud6/, or specify custom path like 'examples/schema'"
  },
  "routes": {
    "pattern": "simple",
    "comment": "Options: 'simple' (array spread), 'factory' (createRoutes function), 'custom'",
    "import": {
      "module": "@yourvendor/your-sprinkle/routes",
      "name": "YourSprinkleRoutes",
      "comment": "For 'factory' pattern, use function name like 'createYourSprinkleRoutes'"
    },
    "factory": {
      "enabled": false,
      "layout_component": "Layout",
      "comment": "Only used if pattern is 'factory'"
    },
    "custom_setup": {
      "enabled": false,
      "commands": [],
      "comment": "Optional array of bash commands for complex route setup"
    }
  },
  "custom_test_data": {
    "enabled": false,
    "path": "app/tests/test-data.sql",
    "comment": "Optional SQL file for additional test data beyond schemas"
  },
  "framework": {
    "version": "main",
    "comment": "Framework branch/version to use. Usually 'main' for latest stable"
  },
  "testing": {
    "php_version": "8.4",
    "node_version": "20",
    "mysql_version": "8.0",
    "userfrosting_version": "^6.0-beta",
    "comment": "Environment versions for testing"
  },
  "frontend": {
    "enabled": true,
    "comment": "Enable Vitest frontend testing",
    "test_command": "npm test",
    "test_data": {
      "source": "integration_framework",
      "comment": "Uses same data as integration tests for consistency",
      "schemas_path": "examples/schema",
      "models_config": ".github/config/integration-test-models.json",
      "description": "Frontend tests use centralized schemas and test data from integration testing framework"
    },
    "coverage": {
      "enabled": true,
      "command": "npm run test:coverage",
      "upload_artifacts": true,
      "comment": "Generate and upload coverage reports"
    },
    "additional_test_commands": [],
    "comment_additional": "Optional array of additional test commands to run (e.g., linting, type checking)"
  },
  "phpunit": {
    "enabled": true,
    "comment": "Enable PHPUnit backend testing",
    "test_command": "vendor/bin/phpunit",
    "coverage": {
      "enabled": true,
      "command": "vendor/bin/phpunit --coverage-text",
      "comment": "Generate coverage reports"
    },
    "testsuites": {
      "all": "vendor/bin/phpunit",
      "integration": "vendor/bin/phpunit --testsuite Integration",
      "controller": "vendor/bin/phpunit --testsuite Controller",
      "comment": "Predefined test suites"
    }
  },
  "vite": {
    "optimize_deps": ["limax", "lodash.deburr"],
    "comment": "Additional dependencies to optimize in vite.config.ts"
  }
}
