{
  "model": "users",
  "title": "USER.PAGE",
  "singular_title": "USER.1",
  "description": "USER.PAGE_DESCRIPTION - Testing Boolean Field Types",
  "table": "users",
  "primary_key": "id",
  "permissions": {
    "read": "uri_users",
    "create": "create_user",
    "update": "update_user_field",
    "delete": "delete_user"
  },
  "default_sort": {
    "user_name": "asc"
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "editable": false,
      "viewable": true,
      "listable": false
    },
    "user_name": {
      "type": "string",
      "label": "Username",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "unique": true,
        "length": {
          "min": 1,
          "max": 50
        }
      }
    },
    "first_name": {
      "type": "string",
      "label": "First Name",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 1,
          "max": 20
        }
      }
    },
    "last_name": {
      "type": "string",
      "label": "Last Name",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 1,
          "max": 30
        }
      }
    },
    "email": {
      "type": "string",
      "label": "Email",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "email": true,
        "unique": true,
        "length": {
          "max": 254
        }
      }
    },
    "flag_verified": {
      "type": "boolean-tgl",
      "label": "Verified",
      "description": "Toggle switch for email verification status",
      "default": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true
    },
    "flag_enabled": {
      "type": "boolean-tgl",
      "label": "Enabled",
      "description": "Toggle switch for user account status",
      "default": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true
    },
    "accepts_marketing": {
      "type": "boolean-yn",
      "label": "Accepts Marketing",
      "description": "Yes/No dropdown for marketing consent",
      "default": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": true
    },
    "is_admin": {
      "type": "boolean",
      "label": "Is Admin",
      "description": "Standard checkbox for admin role",
      "default": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": true
    },
    "password": {
      "type": "password",
      "label": "Password",
      "required": false,
      "listable": false,
      "viewable": false,
      "editable": true,
      "validation": {
        "length": {
          "min": 8,
          "max": 255
        }
      }
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "editable": false,
      "viewable": true,
      "listable": false,
      "date_format": "Y-m-d H:i:s"
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "editable": false,
      "viewable": true,
      "listable": false,
      "date_format": "Y-m-d H:i:s"
    }
  }
}
