{
    "model": "roles",
    "title": "ROLE.PAGE",
    "singular_title": "ROLE.1",
    "description": "ROLE.PAGE_DESCRIPTION",
    "table": "roles",
    "primary_key": "id",
    "permissions": {
        "read": "uri_roles",
        "create": "create_role",
        "update": "update_role_field",
        "delete": "delete_role"
    },
    "default_sort": {
        "name": "asc"
    },
    "relationships": [
        {
            "name": "permissions",
            "type": "many_to_many",
            "pivot_table": "permission_roles",
            "foreign_key": "role_id",
            "related_key": "permission_id",
            "title": "ROLE.PERMISSIONS",
            "actions": {
                "on_update": {
                    "sync": "permission_ids",
                    "description": "Sync role permissions from form input"
                },
                "on_delete": {
                    "detach": "all",
                    "description": "Remove all permission associations when role is deleted"
                }
            }
        },
        {
            "name": "users",
            "type": "many_to_many",
            "pivot_table": "role_users",
            "foreign_key": "role_id",
            "related_key": "user_id",
            "title": "ROLE.USERS",
            "actions": {
                "on_delete": {
                    "detach": "all",
                    "description": "Remove all user associations when role is deleted"
                }
            }
        }
    ],
    "details": [
        {
            "model": "users",
            "list_fields": [
                "user_name",
                "first_name",
                "last_name",
                "email",
                "flag_enabled"
            ],
            "title": "ROLE.USERS"
        },
        {
            "model": "permissions",
            "list_fields": [
                "slug",
                "name",
                "description"
            ],
            "title": "ROLE.PERMISSIONS"
        }
    ],
    "fields": {
        "id": {
            "type": "integer",
            "label": "ID",
            "auto_increment": true,
            "readonly": true,
            "show_in": [
                "detail"
            ]
        },
        "slug": {
            "type": "string",
            "label": "Slug",
            "required": true,
            "show_in": [
                "form",
                "detail"
            ],
            "validation": {
                "required": true,
                "unique": true,
                "length": {
                    "max": 255
                },
                "no_whitespace": true
            }
        },
        "name": {
            "type": "string",
            "label": "Name",
            "required": true,
            "sortable": true,
            "filterable": true,
            "show_in": [
                "list",
                "form",
                "detail"
            ],
            "validation": {
                "required": true,
                "length": {
                    "min": 1,
                    "max": 255
                },
                "no_leading_whitespace": true,
                "no_trailing_whitespace": true
            }
        },
        "description": {
            "type": "text",
            "label": "Description",
            "required": false,
            "sortable": false,
            "filterable": false,
            "show_in": [
                "list",
                "form",
                "detail"
            ]
        },
        "permission_ids": {
            "type": "multiselect",
            "label": "Permissions",
            "description": "Role permissions (used for sync on update)",
            "lookup": {
                "model": "permissions",
                "id": "id",
                "desc": "name"
            },
            "required": false,
            "show_in": [
                "form"
            ]
        },
        "created_at": {
            "type": "datetime",
            "label": "Created At",
            "readonly": true,
            "show_in": [
                "detail"
            ],
            "date_format": "Y-m-d H:i:s"
        },
        "updated_at": {
            "type": "datetime",
            "label": "Updated At",
            "readonly": true,
            "show_in": [
                "detail"
            ],
            "date_format": "Y-m-d H:i:s"
        }
    }
}