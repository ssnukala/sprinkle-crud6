{
  "model": "category",
  "title": "Category Management",
  "description": "Manage product categories",
  "table": "pr_category",
  "primary_key": "id",
  "timestamps": true,
  "soft_delete": true,
  "permissions": {
    "read": "uri_categories",
    "create": "create_category",
    "update": "update_category",
    "delete": "delete_category"
  },
  "default_sort": {
    "id": "desc"
  },
  "detail": {
    "model": "product",
    "foreign_key": "category_id",
    "list_fields": ["name", "slug", "unit_price", "status"],
    "title": "Products"
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "slug": {
      "type": "string",
      "label": "Slug",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "length": {
          "max": 100
        }
      }
    },
    "name": {
      "type": "string",
      "label": "Category Name",
      "required": false,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "length": {
          "max": 100
        }
      }
    },
    "type": {
      "type": "string",
      "label": "Type",
      "sortable": true,
      "filterable": true,
      "searchable": false,
      "validation": {
        "length": {
          "max": 50
        }
      }
    },
    "photo": {
      "type": "string",
      "label": "Photo",
      "sortable": false,
      "filterable": false,
      "searchable": false,
      "validation": {
        "length": {
          "max": 500
        }
      }
    },
    "description": {
      "type": "text",
      "label": "Description",
      "sortable": false,
      "filterable": true,
      "searchable": true
    },
    "notes": {
      "type": "string",
      "label": "Notes",
      "sortable": false,
      "filterable": true,
      "searchable": true,
      "validation": {
        "length": {
          "max": 500
        }
      }
    },
    "meta": {
      "type": "json",
      "label": "Metadata",
      "sortable": false,
      "filterable": false,
      "searchable": false
    },
    "status": {
      "type": "string",
      "label": "Status",
      "sortable": true,
      "filterable": true,
      "searchable": false,
      "validation": {
        "length": {
          "max": 1
        }
      }
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "deleted_at": {
      "type": "datetime",
      "label": "Deleted At",
      "readonly": true,
      "sortable": false,
      "filterable": false,
      "searchable": false
    }
  }
}
