{
  "model": "users",
  "title": "USER.PAGE",
  "singular_title": "USER.1",
  "description": "User Management with Automatic Role Assignment",
  "table": "users",
  "primary_key": "id",
  "permissions": {
    "read": "uri_users",
    "create": "create_user",
    "update": "update_user_field",
    "delete": "delete_user"
  },
  "default_sort": {
    "user_name": "asc"
  },
  "relationships": [
    {
      "name": "roles",
      "type": "many_to_many",
      "pivot_table": "role_users",
      "foreign_key": "user_id",
      "related_key": "role_id",
      "title": "ROLE.2",
      "actions": {
        "on_create": {
          "attach": [
            {
              "related_id": 2,
              "description": "Assign default 'User' role to new users",
              "pivot_data": {
                "created_at": "now",
                "updated_at": "now"
              }
            }
          ]
        },
        "on_update": {
          "sync": "role_ids",
          "description": "Sync user roles from form input"
        },
        "on_delete": {
          "detach": "all",
          "description": "Remove all role associations when user is deleted"
        }
      }
    }
  ],
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "editable": false,
      "viewable": true,
      "listable": false
    },
    "user_name": {
      "type": "string",
      "label": "Username",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "unique": true,
        "length": {
          "min": 1,
          "max": 50
        }
      }
    },
    "first_name": {
      "type": "string",
      "label": "First Name",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 1,
          "max": 20
        }
      }
    },
    "last_name": {
      "type": "string",
      "label": "Last Name",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 1,
          "max": 30
        }
      }
    },
    "email": {
      "type": "string",
      "label": "Email",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "email": true,
        "unique": true,
        "length": {
          "max": 254
        }
      }
    },
    "role_ids": {
      "type": "multiselect",
      "label": "Roles",
      "description": "User roles (used for sync on update)",
      "computed": true,
      "required": false,
      "editable": true,
      "viewable": false,
      "listable": false
    },
    "flag_verified": {
      "type": "boolean-tgl",
      "label": "Verified",
      "description": "Email verification status",
      "default": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true
    },
    "flag_enabled": {
      "type": "boolean-tgl",
      "label": "Enabled",
      "description": "Account enabled status",
      "default": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true
    },
    "password": {
      "type": "password",
      "label": "Password",
      "required": false,
      "listable": false,
      "viewable": false,
      "editable": true,
      "validation": {
        "length": {
          "min": 8,
          "max": 255
        },
        "match": true
      }
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "editable": false,
      "viewable": true,
      "listable": false,
      "date_format": "Y-m-d H:i:s"
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "editable": false,
      "viewable": true,
      "listable": false,
      "date_format": "Y-m-d H:i:s"
    }
  }
}
