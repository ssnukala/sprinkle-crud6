  "common_operations": {
    "list_with_pagination": {
      "description": "Load paginated list",
      "api_pattern": "/api/crud6/{model}?size={size}&page={page}"
    },
    "search": {
      "description": "Search records",
      "api_pattern": "/api/crud6/{model}?search={query}"
    },
    "filter": {
      "description": "Filter by field",
      "api_pattern": "/api/crud6/{model}?filters[{field}]={value}"
    },
    "sort": {
      "description": "Sort by field",
      "api_pattern": "/api/crud6/{model}?sorts[{field}]={direction}"
    },
    "get_schema": {
      "description": "Load schema for forms/modals",
      "api_pattern": "/api/crud6/{model}/schema"
    },
    "get_detail": {
      "description": "Load single record",
      "api_pattern": "/api/crud6/{model}/{id}"
    },
    "create": {
      "description": "Create new record",
      "api_pattern": "/api/crud6/{model}",
      "method": "POST"
    },
    "update": {
      "description": "Update record",
      "api_pattern": "/api/crud6/{model}/{id}",
      "method": "PUT"
    },
    "update_field": {
      "description": "Update single field (toggle)",
      "api_pattern": "/api/crud6/{model}/{id}/{field}",
      "method": "PUT"
    },
    "delete": {
      "description": "Delete record",
      "api_pattern": "/api/crud6/{model}/{id}",
      "method": "DELETE"
    },
    "attach_relationship": {
      "description": "Attach related records",
      "api_pattern": "/api/crud6/{model}/{id}/{relation}",
      "method": "POST",
      "payload_pattern": {
        "related_ids": [1, 2, 3]
      }
    },
    "detach_relationship": {
      "description": "Detach related records",
      "api_pattern": "/api/crud6/{model}/{id}/{relation}",
      "method": "DELETE",
      "payload_pattern": {
        "related_ids": [1]
      }
    },
    "get_nested_list": {
      "description": "Get related records list",
      "api_pattern": "/api/crud6/{model}/{id}/{relation}"
    }
  },
  "authentication": {
    "required": true,
    "permissions_by_model": {
      "users": {
        "read": "uri_users",
        "create": "create_user",
        "update": "update_user_field",
        "delete": "delete_user"
      },
      "roles": {
        "read": "uri_roles",
        "create": "create_role",
        "update": "update_role_field",
        "delete": "delete_role"
      },
      "groups": {
        "read": "uri_groups",
        "create": "create_group",
        "update": "update_group_field",
        "delete": "delete_group"
      },
      "permissions": {
        "read": "uri_permissions",
        "create": "create_permission",
        "update": "update_permission",
        "delete": "delete_permission"
      },
      "activities": {
        "read": "uri_activities"
      }
    }
  }
}
