{
  "model": "stores",
  "title": "Store Locations",
  "singular_title": "Store",
  "description": "Manage store locations with Google Places address autocomplete",
  "table": "stores",
  "primary_key": "id",
  "timestamps": true,
  "permissions": {
    "read": "uri_stores",
    "create": "create_store",
    "update": "update_store",
    "delete": "delete_store"
  },
  "default_sort": {
    "store_name": "asc"
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "ID",
      "auto_increment": true,
      "listable": true,
      "viewable": true,
      "editable": false
    },
    "store_name": {
      "type": "string",
      "label": "Store Name",
      "required": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "validation": {
        "required": true,
        "length": {
          "min": 1,
          "max": 100
        }
      }
    },
    "full_address": {
      "type": "address",
      "label": "Store Address",
      "placeholder": "Search for store location...",
      "required": true,
      "sortable": false,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true,
      "address_fields": {
        "addr_line1": "address_line_1",
        "addr_line2": "address_line_2",
        "city": "city",
        "state": "state",
        "zip": "postal_code",
        "country": "country",
        "latitude": "lat",
        "longitude": "lng"
      },
      "validation": {
        "required": true,
        "length": {
          "max": 500
        }
      }
    },
    "address_line_1": {
      "type": "string",
      "label": "Street Address",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": true,
      "validation": {
        "length": {
          "max": 200
        }
      }
    },
    "address_line_2": {
      "type": "string",
      "label": "Suite/Unit/Apt",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": true,
      "validation": {
        "length": {
          "max": 200
        }
      }
    },
    "city": {
      "type": "string",
      "label": "City",
      "required": false,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true,
      "validation": {
        "length": {
          "max": 100
        }
      }
    },
    "state": {
      "type": "string",
      "label": "State",
      "required": false,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true,
      "validation": {
        "length": {
          "max": 10
        }
      }
    },
    "postal_code": {
      "type": "zip",
      "label": "ZIP Code",
      "required": false,
      "sortable": false,
      "filterable": true,
      "listable": false,
      "viewable": true,
      "editable": true
    },
    "country": {
      "type": "string",
      "label": "Country",
      "default": "US",
      "required": false,
      "sortable": false,
      "filterable": true,
      "listable": false,
      "viewable": true,
      "editable": true,
      "validation": {
        "length": {
          "max": 10
        }
      }
    },
    "lat": {
      "type": "decimal",
      "label": "Latitude",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": false
    },
    "lng": {
      "type": "decimal",
      "label": "Longitude",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": false
    },
    "phone": {
      "type": "phone",
      "label": "Store Phone",
      "required": false,
      "sortable": false,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true,
      "placeholder": "XXX-XXX-XXXX",
      "validation": {
        "regex": {
          "pattern": "\\d{3}-\\d{3}-\\d{4}",
          "message": "Phone must be in format XXX-XXX-XXXX"
        }
      }
    },
    "manager_name": {
      "type": "string",
      "label": "Store Manager",
      "required": false,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true,
      "validation": {
        "length": {
          "max": 100
        }
      }
    },
    "is_active": {
      "type": "boolean",
      "label": "Active",
      "default": true,
      "sortable": true,
      "filterable": true,
      "listable": true,
      "viewable": true,
      "editable": true
    },
    "opens_at": {
      "type": "string",
      "label": "Opening Time",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": true,
      "placeholder": "09:00 AM"
    },
    "closes_at": {
      "type": "string",
      "label": "Closing Time",
      "required": false,
      "sortable": false,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": true,
      "placeholder": "05:00 PM"
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "sortable": true,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": false,
      "date_format": "Y-m-d H:i:s"
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "sortable": true,
      "filterable": false,
      "listable": false,
      "viewable": true,
      "editable": false,
      "date_format": "Y-m-d H:i:s"
    }
  }
}
