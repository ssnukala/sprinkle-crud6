{
  "model": "order",
  "title": "Order Management",
  "singular_title": "Order",
  "description": "Manage customer orders with smartlookup fields",
  "table": "orders",
  "primary_key": "id",
  "timestamps": true,
  "soft_delete": true,
  "render_mode": "master-detail",
  "permissions": {
    "read": "view_orders",
    "create": "create_order",
    "update": "update_order",
    "delete": "delete_order"
  },
  "default_sort": {
    "id": "desc"
  },
  "detail_editable": {
    "model": "order_lines",
    "foreign_key": "order_id",
    "fields": ["product_id", "quantity", "unit_price", "line_total"],
    "title": "Order Lines",
    "allow_add": true,
    "allow_edit": true,
    "allow_delete": true
  },
  "fields": {
    "id": {
      "type": "integer",
      "label": "Order ID",
      "auto_increment": true,
      "readonly": true,
      "sortable": true,
      "filterable": true,
      "searchable": false
    },
    "customer_id": {
      "type": "smartlookup",
      "label": "Customer",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "lookup_model": "customers",
      "lookup_id": "id",
      "lookup_desc": "name",
      "placeholder": "Search for a customer...",
      "description": "Type to search for customers by name"
    },
    "order_number": {
      "type": "string",
      "label": "Order Number",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": true,
      "validation": {
        "length": {
          "max": 50
        }
      }
    },
    "order_date": {
      "type": "date",
      "label": "Order Date",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": false
    },
    "status": {
      "type": "string",
      "label": "Status",
      "required": true,
      "sortable": true,
      "filterable": true,
      "searchable": false,
      "default": "pending",
      "validation": {
        "length": {
          "max": 20
        }
      }
    },
    "total_amount": {
      "type": "decimal",
      "label": "Total Amount",
      "sortable": true,
      "filterable": true,
      "searchable": false,
      "readonly": true
    },
    "notes": {
      "type": "text",
      "label": "Notes",
      "sortable": false,
      "filterable": false,
      "searchable": true
    },
    "created_at": {
      "type": "datetime",
      "label": "Created At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "updated_at": {
      "type": "datetime",
      "label": "Updated At",
      "readonly": true,
      "sortable": true,
      "filterable": false,
      "searchable": false
    },
    "deleted_at": {
      "type": "datetime",
      "label": "Deleted At",
      "readonly": true,
      "sortable": false,
      "filterable": false,
      "searchable": false
    }
  }
}
